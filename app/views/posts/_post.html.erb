<center>
  <div id="<%= dom_id post %>">
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= post.description%>
    </p>

  </div>   
    <%= render :partial => 'like', :locals => {:post => post} %>
    <%= render :partial => 'comments/commentform', :locals => {:post => post} %>
    <%= render :partial => 'comments/comment', :locals => {:post => post} %>
</center>   


